@model VoucherConfigurationModel

@{
    Layout = "_ConfigurePlugin";
    Html.SetActiveMenuItemSystemName("AdditionalFeature.GiftVoucher.Configure");
}

@await Component.InvokeAsync("StoreScopeConfiguration")
<script>
    $(document).ready(function() {
        $("#@Html.IdFor(model => model.EnableCellPhoneNumberZimazon)").click(toggleCellPhoneNumberZimazon);
        toggleCellPhoneNumberZimazon();
        $("#@Html.IdFor(model => model.EnableCellPhoneNumberElectrosales)").click(toggleCellPhoneNumberElectrosales);
        toggleCellPhoneNumberElectrosales();

        $("#@Html.IdFor(model => model.EnableIdOrPassportNumberZimazon)").click(toggleIdOrPassportNumberZimazon);
        toggleIdOrPassportNumberZimazon();
        $("#@Html.IdFor(model => model.EnableIdOrPassportNumberElectrosales)").click(toggleIdOrPassportNumberElectrosales);
        toggleIdOrPassportNumberElectrosales();

        $("#@Html.IdFor(model => model.EnablePhysicalAddressZimazon)").click(togglePhysicalAddressZimazon);
        togglePhysicalAddressZimazon();
        $("#@Html.IdFor(model => model.EnablePhysicalAddressElectrosales)").click(togglePhysicalAddressElectrosales);
        togglePhysicalAddressElectrosales();
    });


    function toggleCellPhoneNumberZimazon() {
        if ($('#@Html.IdFor(model => model.EnableCellPhoneNumberZimazon)').is(':checked')) {
            $('#pnlRequireCellPhoneNumberZimazon').showElement();
        } else {
            $('#pnlRequireCellPhoneNumberZimazon').hideElement();
        }
    }
    function toggleCellPhoneNumberElectrosales() {
        if ($('#@Html.IdFor(model => model.EnableCellPhoneNumberElectrosales)').is(':checked')) {
            $('#pnlRequireCellPhoneNumberElectrosales').showElement();
        } else {
            $('#pnlRequireCellPhoneNumberElectrosales').hideElement();
        }
    }

    function togglePhysicalAddressZimazon() {
        if ($('#@Html.IdFor(model => model.EnablePhysicalAddressZimazon)').is(':checked')) {
            $('#pnlRequirePhysicalAddressZimazon').showElement();
        } else {
            $('#pnlRequirePhysicalAddressZimazon').hideElement();
        }
    }
    function togglePhysicalAddressElectrosales() {
        if ($('#@Html.IdFor(model => model.EnablePhysicalAddressElectrosales)').is(':checked')) {
            $('#pnlRequirePhysicalAddressElectrosales').showElement();
        } else {
            $('#pnlRequirePhysicalAddressElectrosales').hideElement();
        }
    }

    function toggleIdOrPassportNumberZimazon() {
        if ($('#@Html.IdFor(model => model.EnableIdOrPassportNumberZimazon)').is(':checked')) {
            $('#pnlRequireIdOrPassportNumberZimazon').showElement();
        } else {
            $('#pnlRequireIdOrPassportNumberZimazon').hideElement();
        }
    }
    function toggleIdOrPassportNumberElectrosales() {
        if ($('#@Html.IdFor(model => model.EnableIdOrPassportNumberElectrosales)').is(':checked')) {
            $('#pnlRequireIdOrPassportNumberElectrosales').showElement();
        } else {
            $('#pnlRequireIdOrPassportNumberElectrosales').hideElement();
        }
    }
</script>
