@model ServiceRequestSearchModel
@{
    Layout = "_AdminLayout";
    ViewBag.PageTitle = T("Plugins.Misc.ZimzoneAdditionalFeature.ZimzoneServiceRequestList").Text;
    Html.SetActiveMenuItemSystemName("AdditionalFeature.Service.Requests");
}

@{
    const string hideSearchBlockAttributeName = "ServiceListPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<form asp-controller="ServiceRequest" asp-action="Requests" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Plugins.Misc.ZimzoneAdditionalFeature.ZimzoneServiceRequestList")
        </h1>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="form-horizontal">
                <div class="cards-group">
                    <div class="card card-default card-search">
                        <div class="card-body">
                            <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                                <div class="search-text">@T("Admin.Common.Search")</div>
                                <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                                <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                            </div>

                            <div class="search-body @(hideSearchBlock ? "closed" : "")">
                                <div class="row">
                                    <div class="col-md-5">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="CustomerEmail" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="CustomerEmail" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="ServiceId" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="ServiceId" asp-items="Model.AvailableServices" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-7">
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="CustomerName" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-editor asp-for="CustomerName" />
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <div class="col-md-4">
                                                <nop-label asp-for="StatusId" />
                                            </div>
                                            <div class="col-md-8">
                                                <nop-select asp-for="StatusId" asp-items="Model.AvailableStatus" />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="text-center col-12">
                                        <button type="button" id="search-requests" class="btn btn-primary btn-search">
                                            <i class="fas fa-search"></i>
                                            @T("Admin.Common.Search")
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card card-default">
                        <div class="card-body">
                            @await Html.PartialAsync("Table", new DataTablesModel
                       {
                           Name = "requests-grid",
                           //UrlUpdate = new DataUrl("ServicesUpdate", "AdditionalFeature", null),
                           UrlRead = new DataUrl("Requests", "ServiceRequest", null),
                           SearchButtonId = "search-requests",
                           Length = Model.PageSize,
                           LengthMenu = Model.AvailablePageSizes,
                           Filters = new List<FilterParameter>
                           {
                                    new FilterParameter(nameof(Model.CustomerName)),
                                    new FilterParameter(nameof(Model.CustomerEmail)),
                                    new FilterParameter(nameof(Model.ServiceId)),
                                    new FilterParameter(nameof(Model.StatusId))
                           },
                           ColumnCollection = new List<ColumnProperty>
                                {
                                    new ColumnProperty(nameof(ServiceRequestModel.ServiceName))
                                    {
                                        Title = T("Plugins.Misc.ZimzoneAdditionalFeature.Admin.Field.ServiceName").Text,
                                        Width = "100",
                                        ClassName = NopColumnClassDefaults.CenterAll,
                                    },
                                    new ColumnProperty(nameof(ServiceRequestModel.CustomerEmail))
                                    {
                                        Title = T("Plugins.Misc.ZimzoneAdditionalFeature.Admin.Field.CustomerEmail").Text,
                                        Width = "100",
                                        ClassName = NopColumnClassDefaults.CenterAll,
                                    },
                                     new ColumnProperty(nameof(ServiceRequestModel.Status))
                                    {
                                        Title = T("Plugins.Misc.ZimzoneAdditionalFeature.Admin.Field.Status").Text,
                                        Width = "100",
                                        ClassName = NopColumnClassDefaults.CenterAll,
                                    },
                                    new ColumnProperty(nameof(ServiceRequestModel.IsAgreed))
                                    {
                                        Title = T("Plugins.Misc.ZimzoneAdditionalFeature.Admin.Field.IsAgreed").Text,
                                        Width = "100",
                                        ClassName = NopColumnClassDefaults.CenterAll,
                                        Render = new RenderBoolean(),
                                    },
                                    new ColumnProperty(nameof(ServiceRequestModel.AgreedAmount))
                                    {
                                        Title = T("Plugins.Misc.ZimzoneAdditionalFeature.Admin.Field.AgreedAmount").Text,
                                        Width = "100",
                                        ClassName = NopColumnClassDefaults.CenterAll,
                                    },
                                    new ColumnProperty(nameof(ServiceRequestModel.CreatedOn))
                                    {
                                        Title = T("Plugins.Misc.ZimzoneAdditionalFeature.Admin.Field.CreatedOn").Text,
                                        Width = "100",
                                        ClassName = NopColumnClassDefaults.CenterAll,
                                        Render = new RenderDate()
                                    },
                                    new ColumnProperty(nameof(ServiceRequestModel.Id))
                                    {
                                        Title = T("Admin.Common.Edit").Text,
                                        Width = "80",
                                        ClassName =  NopColumnClassDefaults.Button,
                                        Render = new RenderCustom("EditServiceRequest")
                                    },
                                    new ColumnProperty(nameof(ServiceRequestModel.Id))
                                    {
                                        Title = T("Admin.Common.Delete").Text,
                                        Width = "80",
                                        ClassName =  NopColumnClassDefaults.Button,
                                        Render = new RenderCustom("DeleteServiceRequest")
                                    }
                                }
                       })

                            <script>
                                function EditServiceRequest(data, type, row, meta) {
                                    return '<a class="btn btn-default" href="EditRequest/' + row.Id + '"><i class="fa fa-pencil"></i>Edit</a>';
                                };
                                function DeleteServiceRequest(data, type, row, meta) {
                                    return '<a class="btn btn-default" onclick="return ConfirmDelete();" href="Delete/' + row.Id + '"><i class="fa fa-pencil"></i>Delete</a>';
                                };
                                function ConfirmDelete() {
                                    return confirm('Do you want to delete?');
                                };
                            </script>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

</form>
